<Page
    x:Class="SnoreAway.SnoreLab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnoreAway"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

        <Grid Background="SeaGreen">

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">

            <StackPanel  Orientation="Horizontal" Margin="0,10,0,0">

                <TextBlock FontSize="16">Duration</TextBlock>

                <TextBlock Foreground="Yellow" FontSize="16" Name="Duration" Text="{Binding}" Margin="10,0,0,0"></TextBlock>

            </StackPanel>
            <StackPanel Background="AliceBlue" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">

                    <Button Height="100" Name="RecordBtn" Click="RecordBtn_Click" >Record</Button>

                    <Button Height="100" Name="StopBtn" Click="StopBtn_Click" >Stop</Button>

                    <Button Height="100" Name="SaveBtn" Click="SaveBtn_Click" >Save</Button>

                </StackPanel>



            </StackPanel>

        </Grid>
    
</Page>

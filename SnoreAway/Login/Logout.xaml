<Page
    x:Class="SnoreAway.Login.Logout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SnoreAway.Login"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid  Background="#00B993">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <TextBlock HorizontalAlignment="Center" Foreground="Orange" FontSize="36" Text="Thank you for using Snore Away" />

            <Button  x:Name="Login"  Height="400" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Padding="0" BorderThickness="0">
                <Image Height="400" Source="/Assets/SplashScreen.scale-200.png" />
                
           
            </Button>
            <StackPanel>
                <HyperlinkButton Foreground="Red" FontSize="24" x:Name="HyperAccount" Click="HyperAccount_Click">Log in</HyperlinkButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
